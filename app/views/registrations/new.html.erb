<h1>Register!</h1>

<p>Register to distribute nametags at one of our distribution sites. Pick an area of the city, pick a time, and invite friends to join you. Registration deadline is May 26.</p>

<%= form_for @member, :url => registration_path do |f| %>

  <dl>
    <dt><%= f.label(:first_name, "First Name") %></dt>
    <dd><%= f.text_field(:first_name, :size => '60x10') %></dd>
  </dl>

  <dl>
    <dt><%= f.label(:last_name, "Last Name") %></dt>
    <dd><%= f.text_field(:last_name, :size => '60x10') %></dd>
  </dl>

  <dl>
    <dt><%= f.label(:email) %></dt>
    <dd><%= f.email_field(:email) %></dd>
  </dl>


  <dl>
    <dt><%= f.label(:phone) %></dt>
    <dd><%= f.phone_field(:phone) %></dd>
  </dl>


  <dl>
    <dt><%= f.label(:leader, 'I want to lead a nametag distribution station') %></dt>
    <dd><%= f.check_box(:leader) %></dd>
  </dl>


<% Location::TIMES.each do |value, text|  %>
  <ul class="checklist">
    <li class="">
      <%= check_box_tag "member[times]", value, nil, :id => "member_times_#{value}"%>
      <%= label_tag "member[times][#{value}]", text, :id => "member_times_#{value}" %>
      <a class="checkbox-select" href="#">Select</a>
      <a class="checkbox-deselect" href="#">Cancel</a>
    </li>
  </ul>
<% end %>

<span class="clearfix"></span>

<%= f.submit "Submit Registration" %>

<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $('.checklist input').change(function() {
      if($(this).is(":checked")) {
        $(this).siblings("label").addClass('checked');
      }
      else {
       $(this).siblings("label").removeClass('checked');
      }
    });
  });
</script>
